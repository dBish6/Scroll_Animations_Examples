import { createContext, useState, useContext } from "react";

interface ScrollTypeContextProps {
  keyFrames: boolean;
  toggleKeyFrames: (value: boolean) => void;
}

export const AnimationTypeContext =
  createContext<ScrollTypeContextProps | null>(null);

export const AnimationTypeProvider: React.FC<React.ReactElement> = ({
  children,
}) => {
  const [keyFrames, toggleKeyFrames] = useState<boolean>(true);

  return (
    <AnimationTypeContext.Provider value={{ keyFrames, toggleKeyFrames }}>
      {children}
    </AnimationTypeContext.Provider>
  );
};

export const useScrollTypeContext = () => useContext(AnimationTypeContext);
